@model IEnumerable<Dostigator.Models.TimeLine>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Profile_Layout.cshtml";
}

@if (ViewBag.Tag == "true")
{
    <script>
        window.onload = function () {
            M.toast({ html: '@ViewBag.Message' });
        }
    </script>
    
}   


<div class="container">
	<h2>ТаймЛайн</h2>

	<ul class="timeline">

		@foreach (var item in Model)
		{
			<li>
				<div class="direction-@Html.DisplayFor(modelItem => item.Position)">
					<div class="flag-wrapper">
						<span class="flag">@Html.DisplayFor(modelItem => item.Aim.Name)</span>
						<span class="time-wrapper"><span class="time">@Html.DisplayFor(modelItem => item.Date)</span></span>
					</div>
					<div class="desc">@Html.Raw(item.Text)</div>
				</div>
			</li>
		}		

	</ul>
</div>



